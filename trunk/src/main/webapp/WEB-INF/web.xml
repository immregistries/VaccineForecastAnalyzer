<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">

	<display-name>ForecastTester</display-name>
	
	<servlet>
	  <servlet-name>ExternalTestServlet</servlet-name>
	  <servlet-class>org.tch.ft.servlet.ExternalTestServlet</servlet-class>
	</servlet>

	<servlet>
	  <servlet-name>HomeServlet</servlet-name>
	  <servlet-class>org.tch.ft.servlet.HomeServlet</servlet-class>
	</servlet>
	<servlet>
	  <servlet-name>TestCasesServlet</servlet-name>
	  <servlet-class>org.tch.ft.servlet.TestCasesServlet</servlet-class>
	</servlet>
	<servlet>
	  <servlet-name>SoftwareServlet</servlet-name>
	  <servlet-class>org.tch.ft.servlet.SoftwareServlet</servlet-class>
	</servlet>

  <servlet-mapping>
    <servlet-name>HomeServlet</servlet-name>
    <url-pattern>/s/home</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>TestCasesServlet</servlet-name>
    <url-pattern>/s/testCases</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>SoftwareServlet</servlet-name>
    <url-pattern>/s/software</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>ExternalTestServlet</servlet-name>
    <url-pattern>/ExternalTestServlet</url-pattern>
  </servlet-mapping>

	<!--
		There are three means to configure Wickets configuration mode and they 
		are tested in the order given.
		
		1) A system property: -Dwicket.configuration 
		2) servlet specific <init-param> 
		3) context specific <context-param>

		The value might be either "development" (reloading when templates change) or 
		"deployment". If no configuration is found, "development" is the default. -->

	<filter>
		<filter-name>wicket.ForecastTester</filter-name>
		<filter-class>org.apache.wicket.protocol.http.WicketFilter</filter-class>
		<init-param>
			<param-name>applicationClassName</param-name>
			<param-value>org.tch.ft.WicketApplication</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>wicket.ForecastTester</filter-name>
		<url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
	</filter-mapping>
</web-app>
